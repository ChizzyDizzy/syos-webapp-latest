<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>SYOS POS Web Application</display-name>
    <description>Point of Sale System for Synex Outlet Store</description>

    <!-- ========================================== -->
    <!-- APPLICATION CONTEXT LISTENER               -->
    <!-- Initializes application on startup         -->
    <!-- ========================================== -->
    <listener>
        <listener-class>com.syos.web.listeners.ApplicationContextListener</listener-class>
    </listener>

    <!-- ========================================== -->
    <!-- CONTEXT PARAMETERS                        -->
    <!-- ========================================== -->
    <context-param>
        <param-name>appName</param-name>
        <param-value>SYOS POS System</param-value>
    </context-param>

    <context-param>
        <param-name>appVersion</param-name>
        <param-value>1.0.0</param-value>
    </context-param>

    <!-- ========================================== -->
    <!-- FILTERS                                   -->
    <!-- Order matters: CORS -> Auth -> Encoding   -->
    <!-- ========================================== -->

    <!-- CORS Filter - Must be first -->
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>com.syos.web.filters.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>

    <!-- Authentication Filter - Protects secured endpoints -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.syos.web.filters.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/api/sales/*</url-pattern>
        <url-pattern>/api/inventory/*</url-pattern>
        <url-pattern>/api/reports/*</url-pattern>
        <url-pattern>/api/user/profile</url-pattern>
        <url-pattern>/api/user/logout</url-pattern>
    </filter-mapping>

    <!-- Character Encoding Filter -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.syos.web.filters.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- ========================================== -->
    <!-- SERVLET DEFINITIONS                       -->
    <!-- ========================================== -->

    <!-- User Authentication Servlet -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.syos.web.servlets.UserServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/api/user/*</url-pattern>
    </servlet-mapping>

    <!-- Sales Management Servlet -->
    <servlet>
        <servlet-name>SalesServlet</servlet-name>
        <servlet-class>com.syos.web.servlets.SalesServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>SalesServlet</servlet-name>
        <url-pattern>/api/sales/*</url-pattern>
    </servlet-mapping>

    <!-- Inventory Management Servlet -->
    <servlet>
        <servlet-name>InventoryServlet</servlet-name>
        <servlet-class>com.syos.web.servlets.InventoryServlet</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>InventoryServlet</servlet-name>
        <url-pattern>/api/inventory/*</url-pattern>
    </servlet-mapping>

    <!-- Reports Servlet -->
    <servlet>
        <servlet-name>ReportsServlet</servlet-name>
        <servlet-class>com.syos.web.servlets.ReportsServlet</servlet-class>
        <load-on-startup>4</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportsServlet</servlet-name>
        <url-pattern>/api/reports/*</url-pattern>
    </servlet-mapping>

    <!-- ========================================== -->
    <!-- SESSION CONFIGURATION                     -->
    <!-- 30-minute timeout for user sessions       -->
    <!-- ========================================== -->
    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <name>SYOS_SESSION</name>
            <http-only>true</http-only>
            <secure>false</secure> <!-- Set to true in production with HTTPS -->
            <max-age>1800</max-age> <!-- 30 minutes -->
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <!-- ========================================== -->
    <!-- WELCOME FILES                             -->
    <!-- ========================================== -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- ========================================== -->
    <!-- ERROR PAGES                               -->
    <!-- ========================================== -->
    <error-page>
        <error-code>400</error-code>
        <location>/WEB-INF/views/error/400.jsp</location>
    </error-page>

    <error-page>
        <error-code>401</error-code>
        <location>/WEB-INF/views/error/401.jsp</location>
    </error-page>

    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/views/error/403.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/views/error/404.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/views/error/500.jsp</location>
    </error-page>

    <!-- ========================================== -->
    <!-- MIME TYPE MAPPINGS                        -->
    <!-- ========================================== -->
    <mime-mapping>
        <extension>json</extension>
        <mime-type>application/json</mime-type>
    </mime-mapping>

    <!-- ========================================== -->
    <!-- SECURITY CONSTRAINTS (Optional)           -->
    <!-- Uncomment for HTTPS enforcement           -->
    <!-- ========================================== -->
    <!--
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Secure Area</web-resource-name>
            <url-pattern>/api/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    -->

</web-app>